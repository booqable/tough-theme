{{ "spacer.css" | asset_url | stylesheet_tag }}

{%- assign color_palette = section.settings.color_palette -%}
{%- assign size          = section.settings.size -%}
{%- assign size_mobile   = section.settings.size_mobile -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case size -%}
    {%- when 'small' -%}
      --height: 32px;
    {%- when 'medium' -%}
      --height: 64px;
    {%- when 'large' -%}
      --height: 128px;
  {%- endcase -%}

  {%- case size_mobile -%}
    {%- when 'small' -%}
      --height-mobile: 32px;
    {%- when 'medium' -%}
      --height-mobile: 64px;
    {%- when 'large' -%}
      --height-mobile: 128px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="spacer__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}{% if section_preview %} spacer__wrapper--preview{%- endif -%}" style="{{- variables | escape -}}">
  {% if section_preview %}
    <span>This section will render an empty space</span>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Spacer",
    "description": "Insert blank space between sections on your page",
    "tag": "section",
    "class": "spacer",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "select",
        "id": "color_palette",
        "label": "Color palette",
        "options": [
          {
            "value": "one",
            "label": "Color set 1"
          },
          {
            "value": "two",
            "label": "Color set 2"
          },
          {
            "value": "three",
            "label": "Color set 3"
          }
        ],
        "default": "one"
      },
      {
        "type": "header",
        "content": "Desktop settings"
      },
      {
        "type": "select",
        "id": "size",
        "label": "Size",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      },
      {
        "type": "header",
        "content": "Mobile settings"
      },
      {
        "type": "select",
        "id": "size_mobile",
        "label": "Size",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      }
    ]
  }
{% endschema %}

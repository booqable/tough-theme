{% style %}
  bq-cart-lines {
    --line-image-size: var(--thumbnail-size, 80px);
    --line-image-border-radius: var(--border-radius, 0);
    --line-control-border-radius: var(--border-radius, 0);
    --line-availability-border: 1px solid;
    --line-title-font-size: 16px;
    --line-variations-font-size: 14px;
    --line-price-font-size: 16px;
    --line-toggle-font-size: 16px;
    --line-bundle-item-quantity-font-size: 16px;
    --line-bundle-item-name-font-size: 16px;
    --line-availability-border-color-available: var(--color-green, #51C234);
    --line-availability-background-color-available: var(--color-green, #51C234);
    --line-availability-color-available: var(--color-white, #FFFFFF);
    --line-availability-border-color-unavailable: var(--color-red, #C23434);
    --line-availability-background-color-unavailable: var(--color-red, #C23434);
    --line-availability-color-unavailable: var(--color-white, #FFFFFF);

    {% if color_palette == "one" %}
      {% if settings.primary_color != blank %}
        --lines-empty-text-color: var(--color-primary);
        --line-title-color: var(--color-primary);
        --line-price-color: var(--color-primary);
        --line-input-color: var(--color-primary);
        --line-bundle-item-quantity-color: var(--color-primary);
        --line-bundle-item-name-color: var(--color-primary);
        --line-border: 1px solid var(--color-border);
        --line-image-border: 1px solid var(--color-border);
        --line-control-border: 1px solid var(--color-border);
      {% else %}
        --lines-empty-text-color: #0B1A26;
        --line-title-color: #0B1A26;
        --line-price-color: #0B1A26;
        --line-input-color: #0B1A26;
        --line-bundle-item-quantity-color: #0B1A26;
        --line-bundle-item-name-color: #0B1A26;
        --line-border: 1px solid #0B1A2626;
        --line-image-border: 1px solid #0B1A2626;
        --line-control-border: 1px solid #0B1A2626;
      {% endif %}

      {% if settings.secondary_color != blank %}
        --line-variations-color: var(--color-secondary);
      {% else %}
        --line-variations-color: #4E5D78;
      {% endif %}

      {% if settings.background != blank %}
        --line-bundle-item-quantity-background: var(--background-primary);
      {% else %}
        --line-bundle-item-quantity-background: #FFFFFF;
      {% endif %}

      {% if settings.accent_background != blank %}
        --line-toggle-color: var(--background-accent);
      {% else %}
        --line-toggle-color: #F4B841;
      {% endif %}

      {% if settings.accent_outline != blank %}
        --line-icon-color: var(--color-outline);
      {% else %}
        --line-icon-color: #F4B841;
      {% endif %}

    {% elsif color_palette == "two" %}
      {% if settings.primary_color_2 != blank %}
        --lines-empty-text-color: var(--color-primary-2);
        --line-title-color: var(--color-primary-2);
        --line-price-color: var(--color-primary-2);
        --line-input-color: var(--color-primary-2);
        --line-bundle-item-quantity-color: var(--color-primary-2);
        --line-bundle-item-name-color: var(--color-primary-2);
        --line-border: 1px solid var(--color-border-2);
        --line-image-border: 1px solid var(--color-border-2);
        --line-control-border: 1px solid var(--color-border-2);
      {% else %}
        --lines-empty-text-color: #FFFFFF;
        --line-title-color: #FFFFFF;
        --line-price-color: #FFFFFF;
        --line-input-color: #FFFFFF;
        --line-bundle-item-quantity-color: #FFFFFF;
        --line-bundle-item-name-color: #FFFFFF;
        --line-border: 1px solid #FFFFFF47;
        --line-image-border: 1px solid #FFFFFF47;
        --line-control-border: 1px solid #FFFFFF47;
      {% endif %}

      {% if settings.secondary_color_2 != blank %}
        --line-variations-color: var(--color-secondary-2);
      {% else %}
        --line-variations-color: #E1E4E8;
      {% endif %}

      {% if settings.background_2 != blank %}
        --line-bundle-item-quantity-background: var(--background-primary-2);
      {% else %}
        --line-bundle-item-quantity-background: #0B1A26;
      {% endif %}

      {% if settings.accent_background_2 != blank %}
        --line-toggle-color: var(--background-accent-2);
      {% else %}
        --line-toggle-color: #F4B841;
      {% endif %}

      {% if settings.accent_outline_2 != blank %}
        --line-icon-color: var(--color-outline-2);
      {% else %}
        --line-icon-color: #F4B841;
      {% endif %}

    {% elsif color_palette == "three" %}
      {% if settings.primary_color_3 != blank %}
        --lines-empty-text-color: var(--color-primary-3);
        --line-title-color: var(--color-primary-3);
        --line-price-color: var(--color-primary-3);
        --line-input-color: var(--color-primary-3);
        --line-bundle-item-quantity-color: var(--color-primary-3);
        --line-bundle-item-name-color: var(--color-primary-3);
        --line-border: 1px solid var(--color-border-3);
        --line-image-border: 1px solid var(--color-border-3);
        --line-control-border: 1px solid var(--color-border-3);
      {% else %}
        --lines-empty-text-color: #0B1A26;
        --line-title-color: #0B1A26;
        --line-price-color: #0B1A26;
        --line-input-color: #0B1A26;
        --line-bundle-item-quantity-color: #0B1A26;
        --line-bundle-item-name-color: #0B1A26;
        --line-border: 1px solid #0B1A2626;
        --line-image-border: 1px solid #0B1A2626;
        --line-control-border: 1px solid #0B1A2626;
      {% endif %}

      {% if settings.secondary_color_3 != blank %}
        --line-variations-color: var(--color-secondary-3);
      {% else %}
        --line-variations-color: #FFFFFF;
      {% endif %}

      {% if settings.background_3 != blank %}
        --line-bundle-item-quantity-background: var(--background-primary-3);
      {% else %}
        --line-bundle-item-quantity-background: #F4B841;
      {% endif %}

      {% if settings.accent_background_3 != blank %}
        --line-toggle-color: var(--background-accent-3);
      {% else %}
        --line-toggle-color: #0B1A26;
      {% endif %}

      {% if settings.accent_outline_3 != blank %}
        --line-icon-color: var(--color-outline-3);
      {% else %}
        --line-icon-color: #0B1A26;
      {% endif %}
    {%- endif -%}
  }
{% endstyle %}

{% style %}
  bq-cart-services {
    line-height: var(--line-height-sm, 1.2);
    --services-container-background: transparent;
    --services-container-border-radius: var(--border-radius, 0);
    --services-container-padding: 12px 16px 16px;
    --service-checkbox-border-radius: var(--border-radius, 0);
    --service-checkbox-color: transparent;
    --service-checkbox-size: 20px;
    --service-name-font-size: 16px;
    --service-price-font-size: 16px;
    --service-title-font-size: 18px;

    {% if color_palette == "one" %}
      {% if settings.primary_color != blank %}
        --service-checkbox-border: 1px solid var(--color-third);
        --services-container-border: 1px solid var(--color-border);
        --services-text-color: var(--color-primary);
      {% else %}
        --service-checkbox-border: 1px solid #0B1A2666;
        --services-container-border: 1px solid #0B1A2626;
        --services-text-color: #0B1A26;
      {% endif %}

      {% if settings.accent_background != blank %}
        --service-checkbox-color-checked: var(--background-accent);
      {% else %}
        --service-checkbox-color-checked: #F4B841;
      {% endif %}

      {% if settings.accent_color != blank %}
        --service-checkbox-icon-color: var(--color-accent);
      {% else %}
        --service-checkbox-icon-color: #0B1A26;
      {% endif %}

    {% elsif color_palette == "two" %}
      {% if settings.primary_color_2 != blank %}
        --service-checkbox-border: 1px solid var(--color-third-2);
        --services-container-border: 1px solid var(--color-border-2);
        --services-text-color: var(--color-primary-2);
      {% else %}
        --service-checkbox-border: 1px solid #FFFFFF66;
        --services-container-border: 1px solid #FFFFFF47;
        --services-text-color: #FFFFFF;
      {% endif %}

      {% if settings.accent_background_2 != blank %}
        --service-checkbox-color-checked: var(--background-accent-2);
      {% else %}
        --service-checkbox-color-checked: #F4B841;
      {% endif %}

      {% if settings.accent_color_2 != blank %}
        --service-checkbox-icon-color: var(--color-accent-2);
      {% else %}
        --service-checkbox-icon-color: #0B1A26;
      {% endif %}

    {% elsif color_palette == "three" %}
      {% if settings.primary_color_3 != blank %}
        --service-checkbox-border: 1px solid var(--color-third-3);
        --services-container-border: 1px solid var(--color-border-3);
        --services-text-color: var(--color-primary-3);
      {% else %}
        --service-checkbox-border: 1px solid #0B1A2666;
        --services-container-border: 1px solid #0B1A2626;
        --services-text-color: #0B1A26;
      {% endif %}

      {% if settings.accent_background_3 != blank %}
        --service-checkbox-color-checked: var(--background-accent-3);
      {% else %}
        --service-checkbox-color-checked: #0B1A26;
      {% endif %}

      {% if settings.accent_color_3 != blank %}
        --service-checkbox-icon-color: var(--color-accent-3);
      {% else %}
        --service-checkbox-icon-color: #FFFFFF;
      {% endif %}
    {%- endif -%}
  }
{% endstyle %}
